<?xml version="1.0" encoding="utf-8" ?>
<views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.koudaikr.cn/org/petral-ui.xsd">
    <view left="0" right="0" top="0" bottom="0" backgroundColor="green">
        <imageview id="image1" frame="150,20,50,50" backgroundColor="#777777" shadowColor="#880000" shadowOpacity="0.95" shadowRadius="20" shadowOffset="2,5" borderColor="#888888" borderWidth="0" masksToBounds="true" cornerRadius="12.5" image="setting"></imageview>
        
        <imageview id="image11" frame="210,20,50,50" backgroundColor="#777777" shadowColor="#880000" shadowOpacity="0.95" shadowRadius="20" shadowOffset="2,5" borderColor="#888888" borderWidth="0" masksToBounds="true" cornerRadius="12.5" image="setting"></imageview>
        
        <label id="label1" frame="10,50,100,20" font="18" textColor="#555555" backgroundColor="#d3d3d3" text="发送短信通知功能" lines="1" align="right" top="image1;0" height="image1,0"></label>
        
        <textview id="textview1" frame="10,200,300,40" contentInset="10,10,10,10" backgroundColor="#f5f5f5" font="13" textColor="#000000" text="HIMYM" align="left" isEditable="false"></textview>
        
        <textfield id="textfield1" frame="10,260,300,40" backgroundColor="#f8f8f8" font="13+" textColor="#888888" text="default" placeholder="    this is placeholder   " align="left" isSecureText="false"></textfield>
        
        <button id="button1" frame="10,320,300,40" font="13+" titleColor="#555555" backgroundColor="#d6d6d6" backgroundColorHighlighted="#c8c8c8" backgroundImage="setting" backgroundImageHighlighted="setting2" title="Click" align="center"></button>
        
        <RedImageView p-show="{showRed}" id="image2" frame="250,120,50,50" image="setting" top="button1" left="button1;5"></RedImageView>
        
        <scrollview id="scrollview1" frame="10,370,300,120" contentSize="300,120" contentOffset="0,0" contentInset="10,20,10,10" backgroundColor="#d6d6d6">
            <label id="label11" frame="300,120" font="12" textColor="#ffffff" backgroundColor="#912300" text="   通过直接调用.为前缀的方法，直接连续设置 View 的 UI 属性，与调用系统方法的 API 类似。" lines="13" align="right" width="50%" height="50%"></label>
        </scrollview>
        
        <scrollview p-show="{showManyView}" right="0" top="20" width="300" height="120" contentSize="{time}00,120" backgroundColor="orange">
            <flexview id="flexview" width="{time}00" height="100%" p-item-count="{time}" p-direction="row" backgroundColor="yellow">
                <template width="100" height="120" backgroundColor="gray">
                    <imageview id="cellIcon" width="10" height="10" center="0" image="setting"></imageview>
                    <label id="cellInfo" xCenter="0" width="80%" height="20" font="14" textColor="#ffffff" top="cellIcon;10" text="cell" align="center"></label>
                </template>
            </flexview>
        </scrollview>
        
