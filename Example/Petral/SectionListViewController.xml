<?xml version="1.0" encoding="utf-8" ?>
<views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.koudaikr.cn/org/petral-ui.xsd">
    <view left="0" right="0" top="0" bottom="0" backgroundColor="white">
        <tableview id="tableview1" left="0" top="0" width="100%" height="100%" backgroundColor="#d6d6d6" p-sections="2" p-rows="3">
            <header height="60" backgroundColor="yellow">
                <label id="headerLabel" width="100%" height="20" center="0" text="this is header" align="center" />
            </header>
            <section-header height="30" backgroundColor="blue">
                <label id="sectionHeaderLabel" width="100%" height="20" center="0" text="this is section header" align="center" textColor="white" />
            </section-header>
            <section-footer height="20" backgroundColor="red">
                <label id="sectionFooterLabel" width="100%" height="20" center="0" text="this is section footer" align="center" />
            </section-footer>
            <cell height="80">
                <imageview id="cellImage" image="setting" width="50" height="50" left="15" yCenter="0" />
                <label id="cellLabel" left="cellImage;15" right="15" height="20" top="cellImage" text="this is cell text" />
                <label id="cellSubLabel" left="cellImage;15" right="15" height="20" top="cellLabel;10" text="this is cell sub text" />
            </cell>
            <footer height="60" backgroundColor="orange">
                <label id="footerLabel" width="100%" height="20" center="0" text="this is footer" align="center" />
            </footer>
        </tableview>
    </view>
</views>
