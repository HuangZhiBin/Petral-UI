<?xml version="1.0" encoding="utf-8"?>
<views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.koudaikr.cn/org/petral-ui.xsd">
    <view left="0" top="0" width="100%" height="100%" backgroundColor="#898346">
        <RedImageView
            id="image1"
            frame="0,0,50,50"
            shadowColor="#880000"
            shadowOpacity="0.95"
            shadowRadius="20"
            shadowOffset="2,5"
            borderColor="#888888"
            borderWidth="0"
            masksToBounds="true"
            cornerRadius="12.5"
            image="setting"
            
            top="0"
            right="0"
            ></RedImageView>
        <label
            id="label1"
            frame="0,0,0,0"
            font="18"
            textColor="#555555"
            backgroundColor="#d3d3d3"
            text="{text}"
            lines="1"
            align="center"
            
            bottom="0"
            height="image1"
            left="0"
            right="0"></label>
    </view>
</views>
